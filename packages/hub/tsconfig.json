{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"lib": ["ES2022", "DOM"],
		// If someone figures out how to run test & publish w/ module: "ES2022", feel free to contribute!
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES2022",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts", "index.ts"],
	"exclude": ["dist"]
}
